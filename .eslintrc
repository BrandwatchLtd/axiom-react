{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module" //allows import syntax
  },
  "extends": ["plugin:react/recommended", "prettier", "prettier/react", "plugin:prettier/recommended"],
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/no-children-prop": [0], //React router uses <Route children>
    "react/no-unescaped-entities": [0], //Overzealous erroring of qoutes in JSX
  }
}
